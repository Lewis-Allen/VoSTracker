<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<HBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="com.lew.vostracker.VoSTrackerController"
      prefHeight="150.0" prefWidth="250.0">
    <GridPane minHeight="-Infinity" minWidth="-Infinity" alignment="CENTER" HBox.hgrow="ALWAYS">
        <Text fx:id="header" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"
              GridPane.halignment="CENTER" textAlignment="CENTER">Refreshing...
        </Text>
        <ImageView fx:id="vosOne" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS"
                   GridPane.halignment="CENTER"/>
        <ImageView fx:id="vosTwo" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                   GridPane.halignment="CENTER"/>
        <Button fx:id="refresh" onAction="#refresh" GridPane.rowIndex="2" GridPane.columnSpan="2"
                GridPane.hgrow="ALWAYS" GridPane.halignment="CENTER">Refresh
        </Button>
    </GridPane>
</HBox>
